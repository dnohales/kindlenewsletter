{% extends "::base.html.twig" %}

{% block body %}
<div class="top-menu">
	<div class="current-page"></div>
	<div class="buttons">
		
		<div class="popmenu">
			<a href="#"><img src="{{ asset('bundles/eorknl/img/icon/settings.png') }}" /></a>
			<ul class="popmenu-items">
			</ul>
		</div>
	</div>
</div>
<div class="reader-content item-detail">
	<h1 class="title">{{ item.title }}</h1>
	<p class="metainfo">{{ list.stream.title|trim(".") }}&nbsp;&nbsp;|&nbsp;&nbsp;By {{ item.author }}&nbsp;&nbsp;|&nbsp;&nbsp;{{ item.published|date }}.</p>
	<div class="content">
		{{ item.content|raw }}
	</div>
</div>
{% endblock %}